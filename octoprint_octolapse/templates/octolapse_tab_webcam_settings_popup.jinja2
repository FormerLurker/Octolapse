<script type="text/html" id="webcam-settings-popup-template">
    <div data-bind="attr: {id: id}" class="modal hide fade octolapse">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div>
                        <a class="close" aria-hidden="true">&times;</a>
                    </div>
                    <div>
                        <h3>Camera Settings - <span data-bind="text:webcam_settings.name" /></h3>

                        <div class="webcam_settings_preview">
                            <img class="preview"  style="display:none;" data-bind="streamLoading:{src: webcam_settings.stream_url(), loading_selector: loading_selector, error_selector: error_selector, max_width: 900, max_height:333}">
                            <div class="alert error" style="display:none;">
                                Unable to load the webcam stream
                            </div>
                            <div class="alert loading">
                                Loading the webcam stream...<i class="fa fa-spinner fa-spin"></i>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="modal-body scrollable" data-bind="template:{name:'webcam-settings-template', data:webcam_settings}">
                </div>
                <div class="modal-footer" style="bottom:0;position:relative">
                    <div class="row-fluid">
                            <button type="button" class="span4 btn btn-default cancel input-block-level">Cancel</button>
                            <button type="button" class="span4 btn btn-default set-defaults input-block-level">Defaults</button>
                            <button type="button" class="span4 btn btn-primary save input-block-level">Save</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</script>
{% include "octolapse_profiles_camera_webcam.jinja2" %}

