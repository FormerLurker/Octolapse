<!-- Default mjpg-streamer template -->
<script type="text/html" id="webcam-mjpg-streamer-template">
    <div data-bind="foreach: controls" class="column">
        <div data-bind="template: get_template_id_for_control($data)">
        </div>
    </div>
</script>
<!-- Default mjpg-streamer control templates -->
<script type="text/html" id="mjpg-streamer-numeric-control-template">
    <div class="no-column-break">
        <span data-bind="text: slider_label"></span>&nbsp;&nbsp;<a class="octolapse_help" data-bind="attr: {'data-help-url':help_url, 'data-help-title':name, 'data-help-not-found': help_not_found}"></a>
        <div class="row-fluid">
            <div class="span10">
                <input type="range" class="octolapse-slider" data-bind="attr: {min: min, max: max, step: step }, octolapseSliderValue: value" />
            </div>
            <div class="span2">
                <span data-bind="text: value" />
            </div>
        </div>
    </div>
</script>

<script type="text/html" id="mjpg-streamer-checkbox-control-template">
    <div class="no-column-break">
        <div class="row-fluid">
            <div class="span12">
                <label class="checkbox">
                    <input type="checkbox" data-bind="attr: {title: checkbox_title}, checked: checkbox_checked" /><span data-bind="text: name"></span>&nbsp;&nbsp;
                    <a class="octolapse_help" data-bind="attr: {'data-help-url':help_url, 'data-help-title': name, 'data-help-not-found': help_not_found}"></a>
                </label>
            </div>
        </div>
    </div>
</script>

<script type="text/html" id="mjpg-streamer-label-control-template">
    <div class="webcam-label-control">
        <h4 data-bind="text:name"></h4>
    </div>
</script>

<script type="text/html" id="mjpg-streamer-dropdown-control-template">
    <div class="row-fluid">
        <div class="no-column-break">
            <span data-bind="text: name"></span>&nbsp;&nbsp;<a class="octolapse_help" data-bind="attr: {'data-help-url':help_url, 'data-help-title': name, 'data-help-not-found': help_not_found}"></a>
            <div class="row-fluid">
                <div class="span10">
                    <select class="full-width"
                            data-bind="options: get_options,
                                   optionsText: 'name',
                                   optionsValue: 'value',
                                   value: value"></select>
                </div>
            </div>
        </div>
    </div>
</script>

<script type="text/html" id="mjpg-streamer-unknown-control-unknown">
    <div>
        <label data-bind="text: name" />
        <p class="text-error">Unknown Control - Name: <span data-bind="text:name"/>, ID: <span data-bind="text:id"/>, Type: <span data-bind="text:type"/></p>
    </div>
</script>

