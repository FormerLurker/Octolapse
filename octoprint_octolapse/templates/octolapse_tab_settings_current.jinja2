<script type="text/html" id="octolapse-settings-current">
    <a href="#" class="muted"
       data-bind="octolapseToggle: { class_showing: 'fa-caret-down', class_hiding: 'fa-caret-right', container: '#octolapse_status_settings_current_panel', toggle_observable: current_settings_showing }">
        Current Settings <i class="fa fa-caret-down"></i>
    </a>
    <div id="octolapse_status_settings_current_panel">
        <table class="table table-striped table-hover table-condensed table-hover octolapse-profiles">
            <thead>
            <tr>
                <th class="profile_name">Profile</th>
                <th class="profile_description">Name</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Printer</td>
                <td>
                    <select id="octolapse_tab_printer_profile"
                            class="input-block-level"
                            data-bind="
                               enable: Octolapse.Globals.is_admin() &&  !Octolapse.Status.is_timelapse_active(),
                               options: Octolapse.Status.profiles().printers,
                               optionsText: 'name',
                               optionsValue: 'guid',
                               value: Octolapse.Status.current_printer_profile_guid,
                               event: {change: Octolapse.Status.defaultPrinterChanged},
                               optionsCaption: 'Please select...'">
                    </select>
                </td>
            </tr>
            <tr>
                <td>Stabilization</td>
                <td>
                    <select id="octolapse_tab_stabilization_profile"
                            class="input-block-level"
                            data-bind="
                                enable: Octolapse.Globals.is_admin() &&  !Octolapse.Status.is_timelapse_active(),
                                options: Octolapse.Status.profiles().stabilizations,
                                optionsText: 'name',
                                optionsValue: 'guid',
                                event: {change: Octolapse.Status.defaultStabilizationChanged},
                                value: Octolapse.Status.current_stabilization_profile_guid"></select>
                </td>
            </tr>
            <tr>
                <td>Snapshot</td>
                <td>
                    <select id="octolapse_tab_snapshot_profile"
                            class="input-block-level"
                            data-bind="
                                enable: Octolapse.Globals.is_admin() && !Octolapse.Status.is_timelapse_active(),
                                options: Octolapse.Status.profiles().snapshots,
                                optionsText: 'name',
                                optionsValue: 'guid',
                                event: {change: Octolapse.Status.defaultSnapshotChanged},
                                value: Octolapse.Status.current_snapshot_profile_guid"></select>
                </td>
            </tr>
            <tr>
                <td>Rendering</td>
                <td>
                    <select id="octolapse_tab_rendering_profile"
                            class="input-block-level"
                            data-bind="
                                enable: Octolapse.Globals.is_admin() &&  !Octolapse.Status.is_timelapse_active(),
                                options: Octolapse.Status.profiles().renderings,
                                optionsText: 'name',
                                optionsValue: 'guid',
                                event: {change: Octolapse.Status.defaultRenderingChanged},
                                value: Octolapse.Status.current_rendering_profile_guid"></select>
                </td>
            </tr>
            <tr>
                <td>Camera</td>
                <td>
                    <select id="octolapse_tab_camera_profile"
                            class="input-block-level"
                            data-bind="
                                enable: Octolapse.Globals.is_admin() &&  !Octolapse.Status.is_timelapse_active(),
                                options: Octolapse.Status.profiles().cameras,
                                optionsText: 'name',
                                optionsValue: 'guid',
                                event: {change: Octolapse.Status.defaultCameraChanged},
                                value: Octolapse.Status.current_camera_profile_guid"></select>
                </td>
            </tr>
            <tr>
                <td>Debug</td>
                <td>
                    <select id="octolapse_tab_debug_profile"
                            class="input-block-level"
                            data-bind="
                                enable: Octolapse.Globals.is_admin(),
                                options: Octolapse.Status.profiles().debug_profiles,
                                optionsText: 'name',
                                optionsValue: 'guid',
                                event: {change: Octolapse.Status.defaultDebugProfileChanged},
                                value: Octolapse.Status.current_debug_profile_guid"></select>
                </td>
            </tr>
            </tbody>
        </table>
        <div class="row-fluid" data-bind="visible:Octolapse.Globals.is_admin">
            <div class="span3 text-center">
                <div>Trigger State</div>
                <span class="fa-stack fa-2x"
                      data-bind="attr: { title: ('Trigger State - ' + ( Octolapse.Globals.show_trigger_state_changes() ? 'Enabled': 'Disabled'))}, click: function() {toggleInfoPanel('show_trigger_state_changes');}">
                  <i class="fa fa-square fa-stack-2x"
                     data-bind="style: { color: (Octolapse.Globals.enabled() && is_timelapse_active() && Octolapse.Globals.show_trigger_state_changes()) ? '' : 'lightgray' }"></i>
                  <i class="fa icon-off fa-stack-1x fa-inverse"
                     data-bind="style: { color: (Octolapse.Globals.show_trigger_state_changes() ? 'greenyellow' : '') }"></i>
                </span>
            </div>
            <div class="span3 text-center">
                <div>Extrider State</div>
                <span class="fa-stack fa-2x"
                      data-bind="attr: { title: ('Extruder State - ' + ( Octolapse.Globals.show_extruder_state_changes() ? 'Enabled': 'Disabled'))}, click: function() {toggleInfoPanel('show_extruder_state_changes');}">
                  <i class="fa fa-square fa-stack-2x"
                     data-bind="style: { color: (Octolapse.Globals.enabled() && is_timelapse_active() && Octolapse.Globals.show_extruder_state_changes()) ? '' : 'lightgray' }"></i>
                  <i class="fa icon-off fa-stack-1x fa-inverse"
                     data-bind="style: { color: (Octolapse.Globals.show_extruder_state_changes() ? 'greenyellow' : '') }"></i>
                </span>
            </div>
            <div class="span3 text-center">
                <div>Position State</div>
                <span class="fa-stack fa-2x"
                      data-bind="attr: { title: ('Position State - ' + ( Octolapse.Globals.show_position_state_changes() ? 'Enabled': 'Disabled'))}, click: function() {toggleInfoPanel('show_position_state_changes');}">
                  <i class="fa fa-square fa-stack-2x"
                     data-bind="style: { color: (Octolapse.Globals.enabled() && is_timelapse_active() && Octolapse.Globals.show_position_state_changes()) ? '' : 'lightgray' }"></i>
                  <i class="fa icon-off fa-stack-1x fa-inverse"
                     data-bind="style: { color: (Octolapse.Globals.show_position_state_changes() ? 'greenyellow' : '') }"></i>
                </span>

            </div>
            <div class="span3 text-center">
                <div>Position Changes</div>
                <span class="fa-stack fa-2x"
                      data-bind="attr: { title: ('Position Changes - ' + ( Octolapse.Globals.show_position_changes() ? 'Enabled': 'Disabled'))}, click: function() {toggleInfoPanel('show_position_changes');}">
                  <i class="fa fa-square fa-stack-2x"
                     data-bind="style: { color: (Octolapse.Globals.enabled() && is_timelapse_active() && Octolapse.Globals.show_position_changes()) ? '' : 'lightgray' }"></i>
                  <i class="fa icon-off fa-stack-1x fa-inverse"
                     data-bind="style: { color: (Octolapse.Globals.show_position_changes() ? 'greenyellow' : '') }"></i>
                </span>
            </div>


        </div>
    </div>
</script>
