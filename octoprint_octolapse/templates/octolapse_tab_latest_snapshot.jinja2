<script type="text/html" id="latest-snapshot-template">
    <div id="octolapse_latest_snapshot_dialog" class="latest-snapshot-modal fade hide" data-backdrop="true" >
        <div id="octolapse_snapshot_image_container">
            <div class="snapshot-container">
                <span class="previous-snapshots">
                </span>
                <span class="latest-snapshot">
                    <img class="latest" src=""/>
                    <div class="octolapse-snapshot-button-overlay">
                        <a title="Play animation if there are enough frames stored." class="play"
                           data-bind="click:function() { startSnapshotAnimation('octolapse_snapshot_image_container'); },visible:Octolapse.Globals.main_settings.auto_reload_latest_snapshot">
                            <i class="fa fa-play-circle fa-3x"></i>
                        </a>
                        <a class="refresh" data-bind="click:function() {refreshLatestImage('octolapse_snapshot_image_container');},visible: !Octolapse.Globals.main_settings.auto_reload_latest_snapshot()">
                          <i class="fa fa-refresh fa-3x"></i>
                      </a>
                    </div>
                </span>
            </div>
          <div class="button-container bottom-center">
            <button type="button" class="cancel btn btn-primary">Close</button>
          </div>
        </div>
    </div>
</script>


