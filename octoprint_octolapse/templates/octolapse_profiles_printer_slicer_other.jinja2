<script type="text/html" id="octolapse-other-slicer-template">
    <div>
        <div>
            <h4>Slicer - Other</h4>
            <p>
                Attempt to match the settings for your slicer with the following settings as closely as possible.  If you are using Cura, Simplify3d, Slic3r, Slic3rPE, or PrusaSlicer, please change the slicer type setting above.
            </p>
        </div>
        <div>
            <div>
                <h5>Layer Settings</h5>
            </div>
            <div class="control-group">
                <label class="control-label" for="octolapse_other_slicer_vase_mode">Vase Mode</label>
                <div class="controls">
                    <label class="checkbox">
                        <input id="octolapse_other_slicer_vase_mode" name="octolapse_other_slicer_vase_mode"
                               data-bind="checked: slicers.other.vase_mode"
                               title="Enable retraction"
                               type="checkbox" />Enabled
                        <a class="octolapse_help" data-help-url="profiles.printer.slicers.other.vase_mode.md" data-help-title="Vase Mode"></a>
                    </label>
                    <div class="error_label_container text-error" data-error-for="octolapse_other_slicer_vase_mode"></div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="octolapse_other_slicer_layer_height">Layer Height</label>
                <div class="controls">
                    <div class="input-append form-inline">
                        <input id="octolapse_other_slicer_layer_height" name="octolapse_other_slicer_layer_height"
                               class="input-small text-right ignore_hidden_errors"
                               data-bind="value: slicers.other.layer_height"
                               type="number" step="0.0001" min="0.0001" max="100.0" />
                        <span class="add-on">mm</span>
                    </div>
                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.other.layer_height.md" data-help-title="Layer Height"></a>
                    <div class="error_label_container text-error" data-error-for="octolapse_other_slicer_layer_height"></div>
                </div>
            </div>
            <div>
                <h5>Speed Units</h5>
            </div>
            <div class="control-group">
                <label class="control-label" for="octolapse_other_slicer_axis_speed_display_unit_options">Speed Display Units</label>
                <div class="controls">
                    <select id="octolapse_other_slicer_axis_speed_display_unit_options"
                            data-bind="options: Octolapse.Printers.profileOptions.axis_speed_display_unit_options,
                                       optionsText: 'name',
                                       optionsValue: 'value',
                                        event: {change: slicers.other.axisSpeedDisplayUnitsChanged},
                                       value: slicers.other.axis_speed_display_units"></select>
                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.other.axis_speed_display_unit_options.md" data-help-title="Speed Display Units"></a>
                    <div class="error_label_container text-error" data-error-for="octolapse_other_slicer_axis_speed_display_unit_options"></div>
                </div>
            </div>

            <div>
                <h5>
                    Extruder Settings
                </h5>
            </div>
            <div data-bind="foreach: slicers.other.extruders" class="row-fluid octolapse-table-list-row">
                <div class="span6">
                    <fieldset class="octolapse">
                        <legend data-bind="text: ('Extruder ' + ($index()+1).toString())"></legend>
                        <div>
                            <div>
                                <h5>Retraction Length/Z-Hop Distance</h5>
                            </div>
                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_other_slicer_retract_before_move_'+$index().toString())}">Retraction Enabled*</label>
                                <div class="controls">
                                    <label class="checkbox">
                                        <input data-bind="checked: $data.retract_before_move,
                                                          attr: {name: ('octolapse_other_slicer_retract_before_move_'+$index().toString()),
                                                                 id: ('octolapse_other_slicer_retract_before_move_'+$index().toString())}"
                                               title="Enable retraction"
                                               type="checkbox" />Enabled
                                        <a class="octolapse_help" data-help-url="profiles.printer.slicers.other.retract_before_move.md" data-help-title="Retraction Enabled"></a>
                                    </label>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_other_slicer_retract_length_'+$index().toString())}">Retraction Length*</label>
                                <div class="controls">
                                    <div class="input-append form-inline">
                                        <input class="input-small text-right ignore_hidden_errors"
                                               data-bind="value: $data.retract_length,
                                                          attr: {name: ('octolapse_other_slicer_retract_length_'+$index().toString()),
                                                                 id: ('octolapse_other_slicer_retract_length_'+$index().toString())}"
                                               type="number" step="0.0001" min="0.0000" max="100.0" required />
                                        <span class="add-on">mm</span>
                                    </div>
                                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.other.retract_length.md" data-help-title="Retraction Length"></a>
                                    <div class="error_label_container text-error"
                                         data-bind="attr: {'data-error-for': ('octolapse_other_slicer_retract_length_'+$index().toString())}">
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_other_slicer_z_hop_'+$index().toString())}">Z-Hop Height*</label>
                                <div class="controls">
                                    <div class="input-append form-inline">
                                        <input class="input-small text-right ignore_hidden_errors"
                                               data-bind="value: $data.z_hop,
                                                          attr: {name: ('octolapse_other_slicer_z_hop_'+$index().toString()),
                                                                 id: ('octolapse_other_slicer_z_hop_'+$index().toString())}"
                                               type="number" step="0.0001" min="0.0000" max="100.0" required />
                                        <span class="add-on">mm</span>
                                    </div>
                                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.other.z_hop.md" data-help-title="Z-Hop Height"></a>
                                    <div class="error_label_container text-error"
                                         data-bind="attr: {'data-error-for': ('octolapse_other_slicer_z_hop_'+$index().toString())}">
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <span><i>* Indicates required fields</i></span>
                                </div>
                            </div>
                            <div>
                                <h5>Speed Settings </h5>
                            </div>

                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_other_slicer_travel_speed_'+$index().toString())}">Movement Speed*</label>
                                <div class="controls">
                                    <div class="input-append form-inline">
                                        <input class="input-small text-right ignore_hidden_errors"
                                               data-bind="value: $data.travel_speed,
                                                          attr: {name: ('octolapse_other_slicer_travel_speed_'+$index().toString()),
                                                                 id: ('octolapse_other_slicer_travel_speed_'+$index().toString())}"
                                               type="number" min="0" max="9999999" required />
                                        <span class="add-on">mm</span>
                                        <span class="add-on" data-bind="text: $parent.slicers.other.getAxisSpeedTimeUnit">?</span>
                                    </div>
                                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.other.travel_speed.md" data-help-title="Movement Speed"></a>
                                    <div class="error_label_container text-error"
                                         data-bind="attr: {'data-error-for': ('octolapse_other_slicer_travel_speed_'+$index().toString())}">
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_other_slicer_retract_speed_'+$index().toString())}">Retraction Speed*</label>
                                <div class="controls">
                                    <div class="input-append form-inline">
                                        <input class="input-small text-right ignore_hidden_errors"
                                               data-bind="value: $data.retract_speed,
                                                          attr: {name: ('octolapse_other_slicer_retract_speed_'+$index().toString()),
                                                                 id: ('octolapse_other_slicer_retract_speed_'+$index().toString())}"
                                               type="number" min="0" max="9999999" required />
                                        <span class="add-on">mm</span>
                                        <span class="add-on" data-bind="text: $parent.slicers.other.getAxisSpeedTimeUnit">?</span>
                                    </div>
                                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.other.retract_speed.md" data-help-title="Retraction Speed"></a>
                                    <div class="error_label_container text-error"
                                         data-bind="attr: {'data-error-for': ('octolapse_other_slicer_retract_speed_'+$index().toString())}">
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_other_slicer_deretract_speed_'+$index().toString())}">Deretraction Speed*</label>
                                <div class="controls">
                                    <div class="input-append form-inline">
                                        <input class="input-small text-right ignore_hidden_errors"
                                               data-bind="value: $data.deretract_speed,
                                                          attr: {name: ('octolapse_other_slicer_deretract_speed_'+$index().toString()),
                                                                 id: ('octolapse_other_slicer_deretract_speed_'+$index().toString())}"
                                               type="number" min="0" max="9999999" required />
                                        <span class="add-on">mm</span>
                                        <span class="add-on" data-bind="text: $parent.slicers.other.getAxisSpeedTimeUnit">?</span>
                                    </div>
                                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.other.deretract_speed.md" data-help-title="Deretraction Speed"></a>
                                    <div class="error_label_container text-error"
                                         data-bind="attr: {'data-error-for': ('octolapse_other_slicer_deretract_speed_'+$index().toString())}">
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" data-bind="attr: {'for': ('octolapse_other_slicer_z_travel_speed_'+$index().toString())}">Z Movement Speed*</label>
                                <div class="controls">
                                    <div class="input-append form-inline">
                                        <input class="input-small text-right ignore_hidden_errors"
                                               data-bind="value: $data.z_travel_speed,
                                                          attr: {name: ('octolapse_other_slicer_z_travel_speed_'+$index().toString()),
                                                                 id: ('octolapse_other_slicer_z_travel_speed_'+$index().toString())}"
                                               type="number" min="0" max="9999999" required />
                                        <span class="add-on">mm</span>
                                        <span class="add-on" data-bind="text: $parent.slicers.other.getAxisSpeedTimeUnit">?</span>
                                    </div>
                                    <a class="octolapse_help" data-help-url="profiles.printer.slicers.other.z_travel_speed.md" data-help-title="Z Movement Speed"></a>
                                    <div class="error_label_container text-error"
                                         data-bind="attr: {'data-error-for': ('octolapse_other_slicer_z_travel_speed_'+$index().toString())}">
                                    </div>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <span><i>* Indicates required fields</i></span>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>

        </div>
    </div>
</script>
